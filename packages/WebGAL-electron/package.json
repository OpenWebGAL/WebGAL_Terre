{
  "name": "webgal-electron-project",
  "version": "1.0.0",
  "description": "WebGAL Electron",
  "main": "main.js",
  "author": "OpenWebGAL <contact@openwebgal.com>",
  "license": "MPL-2.0",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "build-universal": "electron-builder --universal",
    "build:arm64": "electron-builder --arm64"
  },
  "devDependencies": {
    "electron": "^29.3.3",
    "electron-builder": "^24.12.0"
  },
  "build": {
    "productName": "WebGAL",
    "appId": "com.openwebgal.webgal",
    "copyright": "Copyright Â© 2022 OpenWebGAL. All rights reserved.",
    "directories": {
      "output": "build"
    },
    "asar": false,
    "win": {
      "icon": "public/icon.ico",
      "target": [
        "dir"
      ]
    },
    "linux": {
      "icon": "public/icon.ico",
      "target": [
        "dir"
      ]
    },
    "mac": {
      "icon": "public/icon.ico"
    },
    "electronDownload": {
      "mirror": "https://npmmirror.com/mirrors/electron/"
    }
  },
  "dependencies": {
    "electron-log": "^5.1.5"
  }
}
